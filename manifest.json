{
  "manifest_version": 3,
  "name": "Sample Companion",
  "description": "Starter structure for a Chrome extension with background, content, and popup modules.",
  "version": "0.1.0",
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Sample Companion",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png"
    }
  },
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "sessions"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["src/content/index.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "src/options/options.html"
}
